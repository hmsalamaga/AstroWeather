<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundDark"
    android:weightSum="10">

    <ImageView
        android:id="@+id/cbPicView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/moon"
        android:layout_weight="2"
        android:contentDescription="Moon" />

    <TextClock
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/clockLight"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:text="Długość:  "
        android:textAlignment="center"
        android:textColor="@color/fontDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:text="Szerokość:  "
        android:textAlignment="center"
        android:textColor="@color/fontDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Moonrise"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:text="Wschód: "
        android:textAlignment="center"
        android:textColor="@color/fontLight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Moonset"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:text="Zachód: "
        android:textAlignment="center"
        android:textColor="@color/fontLight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/NewMoon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:text="Nów:"
        android:textAlignment="center"
        android:textColor="@color/fontLight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/FullMoon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:text="Pełnia: "
        android:textAlignment="center"
        android:textColor="@color/fontLight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Faze"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:text="Faza: "
        android:textAlignment="center"
        android:textColor="@color/fontLight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/LunarDay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:text="Dzień miesiąca synodycznego: "
        android:textAlignment="center"
        android:textColor="@color/fontLight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/LunarDayData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/fontLight"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>